doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title}
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.1/css/bulma.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav#main_menu.navbar.is-transparent
      .navbar-brand
        a.navbar-item(href='/')
          i.fa.fa-rocket.is-size-3
        .navbar-burger.burger(data-target='navbarExampleTransparentExample')
          span
          span
          span
      #navbarExampleTransparentExample.navbar-menu
        .navbar-start
          a.navbar-item(href='/')
            | Home
        .navbar-end
          if user
            a.navbar-item(href='/users/logout')
              | Logout
          else
            a.navbar-item(href='/users/login')
              | Login
            a.navbar-item(href='/users/signup')
              | Register
    != messages('message', locals)
    .container.is-one-third.column
      if errors
        each error, i in errors         
          div(class="notification is-danger")  #{error.msg}
            button.delete
    block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js', type='text/javascript')
    script(src='/js/main.js', type='text/javascript')